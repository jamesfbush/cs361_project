{% extends "main.j2" %}
{# {% block title %}Index{% endblock %} #}
{% block head %}
    {{ super() }}
    <style type="text/css">
        .important { color: #336699; }
    </style>
{% endblock %}
{% block content %}
    <h1>Delete {{ dbEntity }}</h1>

    <div class="display-container">
    
        
        {% if deleteRecord %}
        <div class="display-row">
            <h3>{{ entity.capitalize()[:-1] }} successfully deleted.</h3>
            <p></b> {{ deleteRecord }} </b></p>
        </div>
        <div class="display-row">
            <button class="submit-button" onclick="window.location.href='/{{entity}}/retrieve';">Go back to search</button>
        </div>

        {# NOTE: Currently moth-balled #}
        {% else %}
            <p>Delete {{ entity.capitalize() }}?</p>

        {% endif %}
    </div>


{% endblock %}